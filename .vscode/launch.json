    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "http://localhost:3000/_next/static/chunks/pages/index.js",
                    "path": "${workspaceFolder}/src/pages/_app.js"
                }
            ]
        }
    ]
}